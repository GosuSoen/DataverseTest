@model ICollection<DataverseTest.Models.Contact>
@{
    ViewData["Title"] = "Home Page";
}

<script>
    $(document).ready(function ()
    {
        $('#contactTable').DataTable();
    });
</script>

<h3>Contact List</h3>

<table id="contactTable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Home", new { id = item.Id, @class = "btn-info" }) |
                    
                    <form asp-controller="Home" asp-action="Delete" method="post">
                                    <button type="submit">Delete</button>
                                    <input type="hidden" name="contactId" value="@item.Id" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-inline">@Html.ActionLink("Create Contact", "Create", "Home")</div>


